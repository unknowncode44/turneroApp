<?xml version="1.0" encoding="utf-8"?>
<!--creamos una forma rectangular para los botones de color solido-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!--elegimos el color transparente desde la libreria de android-->
    <solid android:color="@android:color/transparent"/>
    <!--redondeamos las esquinas-->
    <corners android:radius="15dp"/>
    <!--creamos un border de 1dp color secundario-->
    <stroke android:color="@color/Secondary"
        android:width="2dp"/>

</shape>