<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:elevation="10dp"
    android:backgroundTint="@color/WhiteSmoke"
    android:padding="2dp"
    app:cardElevation="5dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:gravity="start"
                android:orientation="vertical"
                android:paddingHorizontal="1dp">

                <!--texto-->
                <!--                titulo-->
                <TextView
                    android:id="@+id/available_doctor_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_semi_bold"
                    android:text="Dr. Matias Orellana"
                    android:textSize="20sp" />
                <!--                subtititulo-->
                <TextView
                    android:id="@+id/available_doctor_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_light"
                    android:text="Endocrinologia"
                    android:layout_marginTop="5dp"
                    android:textSize="18sp" />
                <!--                rating-->
                <RatingBar
                    android:layout_marginTop="5dp"
                    android:id="@+id/doctor_rating"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:isIndicator="true"
                    android:numStars="5" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingVertical="15dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/doctor1" />
                <!--texto-->
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>



</androidx.cardview.widget.CardView>